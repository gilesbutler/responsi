.container
  %h1 « Responsi »
  %form#controls
    %input{ name: "url", type: "text", placeholder: "Enter the url you want to test&hellip;", class: "url-input" }
    %input{ name: "submit", type: "submit", value: "Go", class: "url-submit" }
    %select{ name: "sizes", class: "sizes", id: "sizes" }
      %option{ value: "---", selected: true, disabled: true } Size&hellip;
      %option{ value: "320x480", data: { width: 320, height: 480 } }
        320 x 480
      %option{ value: "360x640", data: { width: 360, height: 640 } }
        360 x 640
      %option{ value: "768x1024", data: { width: 768, height: 1024 } }
        768 x 1024
    %input{ name: "rotate", type: "button", value: "Rotate", class: "rotate" }